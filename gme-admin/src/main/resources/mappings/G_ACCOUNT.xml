<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.manage.bus.dao.GAccountDAO">

	<!-- 实体和表的映射关系 -->
	<resultMap type="GAccount" id="responseMap">
		<result property="uid" column="uid"/>
		<result property="account_id" column="account_id"/>
		<result property="real_name" column="real_name"/>
		<result property="card_type" column="card_type"/>
		<result property="card_number" column="card_number"/>
		<result property="bank_name" column="bank_name"/>
		<result property="bank_branch_name" column="bank_branch_name"/>
		<result property="alipay_qrcode_id" column="alipay_qrcode_id"/>
		<result property="alipay_account" column="alipay_account"/>
		<result property="alipay_desc" column="alipay_desc"/>
		<result property="wx_qrcode_id" column="wx_qrcode_id"/>
		<result property="wx_account" column="wx_account"/>
		<result property="wx_desc" column="wx_desc"/>
		<result property="audit_status" column="audit_status"/>
		<result property="account_status" column="account_status"/>
		<result property="token" column="token"/>
		<result property="remark" column="remark"/>
		<result property="version" column="version"/>
		<result property="create_time" column="create_time"/>
		<result property="updated_time" column="updated_time"/>
	</resultMap>
	<!-- 获取分页数据 -->
	<select id="selectPage" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_account 
		WHERE 1=1 
		LIMIT
		<if test="PSIZE==null">10</if><if test="PSIZE!=null">#{PSIZE}</if>
		offset
		<if test="BEGIN==null">0</if><if test="BEGIN!=null">#{BEGIN}</if>
	</select>
	<!-- 获取分页数据总条数 -->
	<select id="selectPageCount" resultType="int" parameterType="java.util.Map">
		SELECT COUNT(1) FROM g_account
		WHERE 1=1 
	</select>
	<!-- 添加单条记录 -->
	<insert id="add" parameterType="GAccount" useGeneratedKeys="true" keyProperty="uid">
		insert into g_account(account_id,real_name,card_type,card_number,bank_name,bank_branch_name,alipay_qrcode_id,alipay_account,alipay_desc,wx_qrcode_id,wx_account,wx_desc,audit_status,account_status,token,remark,version,create_time,updated_time) values(#{account_id},#{real_name},#{card_type},#{card_number},#{bank_name},#{bank_branch_name},#{alipay_qrcode_id},#{alipay_account},#{alipay_desc},#{wx_qrcode_id},#{wx_account},#{wx_desc},#{audit_status},#{account_status},#{token},#{remark},#{version},#{create_time},#{updated_time})
	</insert>
	<!-- 获取单条记录 -->
	<select id="getById" parameterType="long" resultMap="responseMap">
		SELECT * FROM g_account WHERE 
		uid=#{uid} 
	</select>
	<!-- 更新单条记录 -->
	<update id="update" parameterType="GAccount">
		update g_account
		<set>
				<if test="account_id!=null">
					account_id=#{account_id},
				</if>
				<if test="real_name!=null">
					real_name=#{real_name},
				</if>
				<if test="card_type!=null">
					card_type=#{card_type},
				</if>
				<if test="card_number!=null">
					card_number=#{card_number},
				</if>
				<if test="bank_name!=null">
					bank_name=#{bank_name},
				</if>
				<if test="bank_branch_name!=null">
					bank_branch_name=#{bank_branch_name},
				</if>
				<if test="alipay_qrcode_id!=null">
					alipay_qrcode_id=#{alipay_qrcode_id},
				</if>
				<if test="alipay_account!=null">
					alipay_account=#{alipay_account},
				</if>
				<if test="alipay_desc!=null">
					alipay_desc=#{alipay_desc},
				</if>
				<if test="wx_qrcode_id!=null">
					wx_qrcode_id=#{wx_qrcode_id},
				</if>
				<if test="wx_account!=null">
					wx_account=#{wx_account},
				</if>
				<if test="wx_desc!=null">
					wx_desc=#{wx_desc},
				</if>
				<if test="audit_status!=null">
					audit_status=#{audit_status},
				</if>
				<if test="account_status!=null">
					account_status=#{account_status},
				</if>
				<if test="token!=null">
					token=#{token},
				</if>
				<if test="remark!=null">
					remark=#{remark},
				</if>
				<if test="version!=null">
					version=#{version},
				</if>
				<if test="create_time!=null">
					create_time=#{create_time},
				</if>
				<if test="updated_time!=null">
					updated_time=#{updated_time}
				</if>
		</set>
		where  
		uid=#{uid} 
	</update>
	<!-- 删除单条记录 -->
	<delete id="deleteById" parameterType="long">
		delete from g_account where 
		uid=#{uid} 
	</delete>
	<!-- 获取所有数据 -->
	<select id="selectAll" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_account where 1=1 
	</select>
</mapper>
