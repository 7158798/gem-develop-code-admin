<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.manage.bus.dao.GCurrencyCirculateStatisticsDAO">

	<!-- 实体和表的映射关系 -->
	<resultMap type="GCurrencyCirculateStatistics" id="responseMap">
		<result property="volume_id" column="volume_id"/>
		<result property="currency_id" column="currency_id"/>
		<result property="currency_symbol" column="currency_symbol"/>
		<result property="current_price" column="current_price"/>
		<result property="trade_volume" column="trade_volume"/>
		<result property="total_value" column="total_value"/>
		<result property="daily_change" column="daily_change"/>
	</resultMap>
	<!-- 获取分页数据 -->
	<select id="selectPage" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_currency_circulate_statistics 
		WHERE 1=1 
		LIMIT
		<if test="PSIZE==null">10</if><if test="PSIZE!=null">#{PSIZE}</if>
		offset
		<if test="BEGIN==null">0</if><if test="BEGIN!=null">#{BEGIN}</if>
	</select>
	<!-- 获取分页数据总条数 -->
	<select id="selectPageCount" resultType="int" parameterType="java.util.Map">
		SELECT COUNT(1) FROM g_currency_circulate_statistics
		WHERE 1=1 
	</select>
	<!-- 添加单条记录 -->
	<insert id="add" parameterType="GCurrencyCirculateStatistics" useGeneratedKeys="true" keyProperty="volume_id">
		insert into g_currency_circulate_statistics(currency_id,currency_symbol,current_price,trade_volume,total_value,daily_change) values(#{currency_id},#{currency_symbol},#{current_price},#{trade_volume},#{total_value},#{daily_change})
	</insert>
	<!-- 获取单条记录 -->
	<select id="getById" parameterType="long" resultMap="responseMap">
		SELECT * FROM g_currency_circulate_statistics WHERE 
		volume_id=#{volume_id} 
	</select>
	<!-- 更新单条记录 -->
	<update id="update" parameterType="GCurrencyCirculateStatistics">
		update g_currency_circulate_statistics
		<set>
				<if test="currency_id!=null">
					currency_id=#{currency_id},
				</if>
				<if test="currency_symbol!=null">
					currency_symbol=#{currency_symbol},
				</if>
				<if test="current_price!=null">
					current_price=#{current_price},
				</if>
				<if test="trade_volume!=null">
					trade_volume=#{trade_volume},
				</if>
				<if test="total_value!=null">
					total_value=#{total_value},
				</if>
				<if test="daily_change!=null">
					daily_change=#{daily_change}
				</if>
		</set>
		where  
		volume_id=#{volume_id} 
	</update>
	<!-- 删除单条记录 -->
	<delete id="deleteById" parameterType="long">
		delete from g_currency_circulate_statistics where 
		volume_id=#{volume_id} 
	</delete>
	<!-- 获取所有数据 -->
	<select id="selectAll" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_currency_circulate_statistics where 1=1 
	</select>
</mapper>
