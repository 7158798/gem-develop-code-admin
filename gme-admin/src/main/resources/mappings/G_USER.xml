<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.manage.bus.dao.GUserDAO">

	<!-- 实体和表的映射关系 -->
	<resultMap type="GUser" id="responseMap">
		<result property="uid" column="uid"/>
		<result property="name" column="name"/>
		<result property="password" column="password"/>
		<result property="country_code" column="country_code"/>
		<result property="phone_code" column="phone_code"/>
		<result property="mail" column="mail"/>
		<result property="is_supplier" column="is_supplier"/>
		<result property="trade_auth" column="trade_auth"/>
		<result property="last_login_time" column="last_login_time"/>
		<result property="is_change_password" column="is_change_password"/>
		<result property="password_input_error_count" column="password_input_error_count"/>
		<result property="promo_code" column="promo_code"/>
		<result property="status" column="status"/>
		<result property="is_second_verify" column="is_second_verify"/>
		<result property="remark" column="remark"/>
		<result property="version" column="version"/>
		<result property="create_time" column="create_time"/>
		<result property="updated_time" column="updated_time"/>
	</resultMap>
	<!-- 获取分页数据 -->
	<select id="selectPage" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_user 
		WHERE 1=1 
		LIMIT
		<if test="PSIZE==null">10</if><if test="PSIZE!=null">#{PSIZE}</if>
		offset
		<if test="BEGIN==null">0</if><if test="BEGIN!=null">#{BEGIN}</if>
	</select>
	<!-- 获取分页数据总条数 -->
	<select id="selectPageCount" resultType="int" parameterType="java.util.Map">
		SELECT COUNT(1) FROM g_user
		WHERE 1=1 
	</select>
	<!-- 添加单条记录 -->
	<insert id="add" parameterType="GUser" useGeneratedKeys="true" keyProperty="uid">
		insert into g_user(name,password,country_code,phone_code,mail,is_supplier,trade_auth,last_login_time,is_change_password,password_input_error_count,promo_code,status,is_second_verify,remark,version,create_time,updated_time) values(#{name},#{password},#{country_code},#{phone_code},#{mail},#{is_supplier},#{trade_auth},#{last_login_time},#{is_change_password},#{password_input_error_count},#{promo_code},#{status},#{is_second_verify},#{remark},#{version},#{create_time},#{updated_time})
	</insert>
	<!-- 获取单条记录 -->
	<select id="getById" parameterType="long" resultMap="responseMap">
		SELECT * FROM g_user WHERE 
		uid=#{uid} 
	</select>
	<!-- 更新单条记录 -->
	<update id="update" parameterType="GUser">
		update g_user
		<set>
				<if test="name!=null">
					name=#{name},
				</if>
				<if test="password!=null">
					password=#{password},
				</if>
				<if test="country_code!=null">
					country_code=#{country_code},
				</if>
				<if test="phone_code!=null">
					phone_code=#{phone_code},
				</if>
				<if test="mail!=null">
					mail=#{mail},
				</if>
				<if test="is_supplier!=null">
					is_supplier=#{is_supplier},
				</if>
				<if test="trade_auth!=null">
					trade_auth=#{trade_auth},
				</if>
				<if test="last_login_time!=null">
					last_login_time=#{last_login_time},
				</if>
				<if test="is_change_password!=null">
					is_change_password=#{is_change_password},
				</if>
				<if test="password_input_error_count!=null">
					password_input_error_count=#{password_input_error_count},
				</if>
				<if test="promo_code!=null">
					promo_code=#{promo_code},
				</if>
				<if test="status!=null">
					status=#{status},
				</if>
				<if test="is_second_verify!=null">
					is_second_verify=#{is_second_verify},
				</if>
				<if test="remark!=null">
					remark=#{remark},
				</if>
				<if test="version!=null">
					version=#{version},
				</if>
				<if test="create_time!=null">
					create_time=#{create_time},
				</if>
				<if test="updated_time!=null">
					updated_time=#{updated_time}
				</if>
		</set>
		where  
		uid=#{uid} 
	</update>
	<!-- 删除单条记录 -->
	<delete id="deleteById" parameterType="long">
		delete from g_user where 
		uid=#{uid} 
	</delete>
	<!-- 获取所有数据 -->
	<select id="selectAll" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_user where 1=1 
	</select>
</mapper>
