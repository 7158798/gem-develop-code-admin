<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.manage.bus.dao.GWorkOrderReplyDAO">

	<!-- 实体和表的映射关系 -->
	<resultMap type="GWorkOrderReply" id="responseMap">
		<result property="reply_id" column="reply_id"/>
		<result property="subject_id" column="subject_id"/>
		<result property="content" column="content"/>
		<result property="reply_img_id" column="reply_img_id"/>
		<result property="type" column="type"/>
		<result property="uid" column="uid"/>
		<result property="name" column="name"/>
		<result property="remark" column="remark"/>
		<result property="version" column="version"/>
		<result property="create_time" column="create_time"/>
		<result property="updated_time" column="updated_time"/>
	</resultMap>
	<!-- 获取分页数据 -->
	<select id="selectPage" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_work_order_reply 
		WHERE 1=1 
		LIMIT
		<if test="PSIZE==null">10</if><if test="PSIZE!=null">#{PSIZE}</if>
		offset
		<if test="BEGIN==null">0</if><if test="BEGIN!=null">#{BEGIN}</if>
	</select>
	<!-- 获取分页数据总条数 -->
	<select id="selectPageCount" resultType="int" parameterType="java.util.Map">
		SELECT COUNT(1) FROM g_work_order_reply
		WHERE 1=1 
	</select>
	<!-- 添加单条记录 -->
	<insert id="add" parameterType="GWorkOrderReply" useGeneratedKeys="true" keyProperty="reply_id">
		insert into g_work_order_reply(subject_id,content,reply_img_id,type,uid,name,remark,version,create_time,updated_time) values(#{subject_id},#{content},#{reply_img_id},#{type},#{uid},#{name},#{remark},#{version},#{create_time},#{updated_time})
	</insert>
	<!-- 获取单条记录 -->
	<select id="getById" parameterType="long" resultMap="responseMap">
		SELECT * FROM g_work_order_reply WHERE 
		reply_id=#{reply_id} 
	</select>
	<!-- 更新单条记录 -->
	<update id="update" parameterType="GWorkOrderReply">
		update g_work_order_reply
		<set>
				<if test="subject_id!=null">
					subject_id=#{subject_id},
				</if>
				<if test="content!=null">
					content=#{content},
				</if>
				<if test="reply_img_id!=null">
					reply_img_id=#{reply_img_id},
				</if>
				<if test="type!=null">
					type=#{type},
				</if>
				<if test="uid!=null">
					uid=#{uid},
				</if>
				<if test="name!=null">
					name=#{name},
				</if>
				<if test="remark!=null">
					remark=#{remark},
				</if>
				<if test="version!=null">
					version=#{version},
				</if>
				<if test="create_time!=null">
					create_time=#{create_time},
				</if>
				<if test="updated_time!=null">
					updated_time=#{updated_time}
				</if>
		</set>
		where  
		reply_id=#{reply_id} 
	</update>
	<!-- 删除单条记录 -->
	<delete id="deleteById" parameterType="long">
		delete from g_work_order_reply where 
		reply_id=#{reply_id} 
	</delete>
	<!-- 获取所有数据 -->
	<select id="selectAll" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_work_order_reply where 1=1 
	</select>
</mapper>
