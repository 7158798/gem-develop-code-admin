<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.manage.bus.dao.GWorkOrderDAO">

	<!-- 实体和表的映射关系 -->
	<resultMap type="GWorkOrder" id="responseMap">
		<result property="subject_id" column="subject_id"/>
		<result property="work_id" column="work_id"/>
		<result property="subject" column="subject"/>
		<result property="work_type" column="work_type"/>
		<result property="currency_id" column="currency_id"/>
		<result property="biz_id" column="biz_id"/>
		<result property="work_content" column="work_content"/>
		<result property="work_img_id" column="work_img_id"/>
		<result property="uid" column="uid"/>
		<result property="account_id" column="account_id"/>
		<result property="phone_code" column="phone_code"/>
		<result property="name" column="name"/>
		<result property="submit_time" column="submit_time"/>
		<result property="sys_uid" column="sys_uid"/>
		<result property="sys_name" column="sys_name"/>
		<result property="finished_time" column="finished_time"/>
		<result property="work_status" column="work_status"/>
		<result property="reply_limit" column="reply_limit"/>
		<result property="remark" column="remark"/>
		<result property="version" column="version"/>
		<result property="create_time" column="create_time"/>
		<result property="updated_time" column="updated_time"/>
	</resultMap>
	<!-- 获取分页数据 -->
	<select id="selectPage" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_work_order 
		WHERE 1=1 
		LIMIT
		<if test="PSIZE==null">10</if><if test="PSIZE!=null">#{PSIZE}</if>
		offset
		<if test="BEGIN==null">0</if><if test="BEGIN!=null">#{BEGIN}</if>
	</select>
	<!-- 获取分页数据总条数 -->
	<select id="selectPageCount" resultType="int" parameterType="java.util.Map">
		SELECT COUNT(1) FROM g_work_order
		WHERE 1=1 
	</select>
	<!-- 添加单条记录 -->
	<insert id="add" parameterType="GWorkOrder" useGeneratedKeys="true" keyProperty="subject_id">
		insert into g_work_order(work_id,subject,work_type,currency_id,biz_id,work_content,work_img_id,uid,account_id,phone_code,name,submit_time,sys_uid,sys_name,finished_time,work_status,reply_limit,remark,version,create_time,updated_time) values(#{work_id},#{subject},#{work_type},#{currency_id},#{biz_id},#{work_content},#{work_img_id},#{uid},#{account_id},#{phone_code},#{name},#{submit_time},#{sys_uid},#{sys_name},#{finished_time},#{work_status},#{reply_limit},#{remark},#{version},#{create_time},#{updated_time})
	</insert>
	<!-- 获取单条记录 -->
	<select id="getById" parameterType="long" resultMap="responseMap">
		SELECT * FROM g_work_order WHERE 
		subject_id=#{subject_id} 
	</select>
	<!-- 更新单条记录 -->
	<update id="update" parameterType="GWorkOrder">
		update g_work_order
		<set>
				<if test="work_id!=null">
					work_id=#{work_id},
				</if>
				<if test="subject!=null">
					subject=#{subject},
				</if>
				<if test="work_type!=null">
					work_type=#{work_type},
				</if>
				<if test="currency_id!=null">
					currency_id=#{currency_id},
				</if>
				<if test="biz_id!=null">
					biz_id=#{biz_id},
				</if>
				<if test="work_content!=null">
					work_content=#{work_content},
				</if>
				<if test="work_img_id!=null">
					work_img_id=#{work_img_id},
				</if>
				<if test="uid!=null">
					uid=#{uid},
				</if>
				<if test="account_id!=null">
					account_id=#{account_id},
				</if>
				<if test="phone_code!=null">
					phone_code=#{phone_code},
				</if>
				<if test="name!=null">
					name=#{name},
				</if>
				<if test="submit_time!=null">
					submit_time=#{submit_time},
				</if>
				<if test="sys_uid!=null">
					sys_uid=#{sys_uid},
				</if>
				<if test="sys_name!=null">
					sys_name=#{sys_name},
				</if>
				<if test="finished_time!=null">
					finished_time=#{finished_time},
				</if>
				<if test="work_status!=null">
					work_status=#{work_status},
				</if>
				<if test="reply_limit!=null">
					reply_limit=#{reply_limit},
				</if>
				<if test="remark!=null">
					remark=#{remark},
				</if>
				<if test="version!=null">
					version=#{version},
				</if>
				<if test="create_time!=null">
					create_time=#{create_time},
				</if>
				<if test="updated_time!=null">
					updated_time=#{updated_time}
				</if>
		</set>
		where  
		subject_id=#{subject_id} 
	</update>
	<!-- 删除单条记录 -->
	<delete id="deleteById" parameterType="long">
		delete from g_work_order where 
		subject_id=#{subject_id} 
	</delete>
	<!-- 获取所有数据 -->
	<select id="selectAll" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_work_order where 1=1 
	</select>
</mapper>
