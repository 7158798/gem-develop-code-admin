<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.manage.bus.dao.GAssetDAO">

	<!-- 实体和表的映射关系 -->
	<resultMap type="GAsset" id="responseMap">
		<result property="asset_id" column="asset_id"/>
		<result property="uid" column="uid"/>
		<result property="account_id" column="account_id"/>
		<result property="currency_id" column="currency_id"/>
		<result property="total_assets" column="total_assets"/>
		<result property="usable_assets" column="usable_assets"/>
		<result property="frozen_assets" column="frozen_assets"/>
		<result property="status" column="status"/>
		<result property="token" column="token"/>
		<result property="remark" column="remark"/>
		<result property="version" column="version"/>
		<result property="create_time" column="create_time"/>
		<result property="updated_time" column="updated_time"/>
	</resultMap>
	<!-- 获取分页数据 -->
	<select id="selectPage" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_asset 
		WHERE 1=1 
		LIMIT
		<if test="PSIZE==null">10</if><if test="PSIZE!=null">#{PSIZE}</if>
		offset
		<if test="BEGIN==null">0</if><if test="BEGIN!=null">#{BEGIN}</if>
	</select>
	<!-- 获取分页数据总条数 -->
	<select id="selectPageCount" resultType="int" parameterType="java.util.Map">
		SELECT COUNT(1) FROM g_asset
		WHERE 1=1 
	</select>
	<!-- 添加单条记录 -->
	<insert id="add" parameterType="GAsset" useGeneratedKeys="true" keyProperty="asset_id">
		insert into g_asset(uid,account_id,currency_id,total_assets,usable_assets,frozen_assets,status,token,remark,version,create_time,updated_time) values(#{uid},#{account_id},#{currency_id},#{total_assets},#{usable_assets},#{frozen_assets},#{status},#{token},#{remark},#{version},#{create_time},#{updated_time})
	</insert>
	<!-- 获取单条记录 -->
	<select id="getById" parameterType="long" resultMap="responseMap">
		SELECT * FROM g_asset WHERE 
		asset_id=#{asset_id} 
	</select>
	<!-- 更新单条记录 -->
	<update id="update" parameterType="GAsset">
		update g_asset
		<set>
				<if test="uid!=null">
					uid=#{uid},
				</if>
				<if test="account_id!=null">
					account_id=#{account_id},
				</if>
				<if test="currency_id!=null">
					currency_id=#{currency_id},
				</if>
				<if test="total_assets!=null">
					total_assets=#{total_assets},
				</if>
				<if test="usable_assets!=null">
					usable_assets=#{usable_assets},
				</if>
				<if test="frozen_assets!=null">
					frozen_assets=#{frozen_assets},
				</if>
				<if test="status!=null">
					status=#{status},
				</if>
				<if test="token!=null">
					token=#{token},
				</if>
				<if test="remark!=null">
					remark=#{remark},
				</if>
				<if test="version!=null">
					version=#{version},
				</if>
				<if test="create_time!=null">
					create_time=#{create_time},
				</if>
				<if test="updated_time!=null">
					updated_time=#{updated_time}
				</if>
		</set>
		where  
		asset_id=#{asset_id} 
	</update>
	<!-- 删除单条记录 -->
	<delete id="deleteById" parameterType="long">
		delete from g_asset where 
		asset_id=#{asset_id} 
	</delete>
	<!-- 获取所有数据 -->
	<select id="selectAll" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_asset where 1=1 
	</select>
</mapper>
