<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.manage.bus.dao.GMessageStateDAO">

	<!-- 实体和表的映射关系 -->
	<resultMap type="GMessageState" id="responseMap">
		<result property="id" column="id"/>
		<result property="type" column="type"/>
		<result property="country_code" column="country_code"/>
		<result property="receiver" column="receiver"/>
		<result property="status" column="status"/>
		<result property="error_reason" column="error_reason"/>
		<result property="biz_id" column="biz_id"/>
		<result property="biz_desc" column="biz_desc"/>
		<result property="biz_content" column="biz_content"/>
		<result property="uid" column="uid"/>
		<result property="client_ip" column="client_ip"/>
		<result property="remark" column="remark"/>
		<result property="version" column="version"/>
		<result property="create_time" column="create_time"/>
		<result property="updated_time" column="updated_time"/>
	</resultMap>
	<!-- 获取分页数据 -->
	<select id="selectPage" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_message_state 
		WHERE 1=1 
		LIMIT
		<if test="PSIZE==null">10</if><if test="PSIZE!=null">#{PSIZE}</if>
		offset
		<if test="BEGIN==null">0</if><if test="BEGIN!=null">#{BEGIN}</if>
	</select>
	<!-- 获取分页数据总条数 -->
	<select id="selectPageCount" resultType="int" parameterType="java.util.Map">
		SELECT COUNT(1) FROM g_message_state
		WHERE 1=1 
	</select>
	<!-- 添加单条记录 -->
	<insert id="add" parameterType="GMessageState" useGeneratedKeys="true" keyProperty="id">
		insert into g_message_state(type,country_code,receiver,status,error_reason,biz_id,biz_desc,biz_content,uid,client_ip,remark,version,create_time,updated_time) values(#{type},#{country_code},#{receiver},#{status},#{error_reason},#{biz_id},#{biz_desc},#{biz_content},#{uid},#{client_ip},#{remark},#{version},#{create_time},#{updated_time})
	</insert>
	<!-- 获取单条记录 -->
	<select id="getById" parameterType="long" resultMap="responseMap">
		SELECT * FROM g_message_state WHERE 
		id=#{id} 
	</select>
	<!-- 更新单条记录 -->
	<update id="update" parameterType="GMessageState">
		update g_message_state
		<set>
				<if test="type!=null">
					type=#{type},
				</if>
				<if test="country_code!=null">
					country_code=#{country_code},
				</if>
				<if test="receiver!=null">
					receiver=#{receiver},
				</if>
				<if test="status!=null">
					status=#{status},
				</if>
				<if test="error_reason!=null">
					error_reason=#{error_reason},
				</if>
				<if test="biz_id!=null">
					biz_id=#{biz_id},
				</if>
				<if test="biz_desc!=null">
					biz_desc=#{biz_desc},
				</if>
				<if test="biz_content!=null">
					biz_content=#{biz_content},
				</if>
				<if test="uid!=null">
					uid=#{uid},
				</if>
				<if test="client_ip!=null">
					client_ip=#{client_ip},
				</if>
				<if test="remark!=null">
					remark=#{remark},
				</if>
				<if test="version!=null">
					version=#{version},
				</if>
				<if test="create_time!=null">
					create_time=#{create_time},
				</if>
				<if test="updated_time!=null">
					updated_time=#{updated_time}
				</if>
		</set>
		where  
		id=#{id} 
	</update>
	<!-- 删除单条记录 -->
	<delete id="deleteById" parameterType="long">
		delete from g_message_state where 
		id=#{id} 
	</delete>
	<!-- 获取所有数据 -->
	<select id="selectAll" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM g_message_state where 1=1 
	</select>
</mapper>
